<!--         	schemaFiles/semanticFields.xml, -->
<!--         	schemaFiles/typologyFields.xml, -->
<!--         	schemaFiles/userFields.xml -->
<!--         </str> -->
       <!--The default value of reservation is 10 secs.See the documentation below . Normally , you should not need to specify this -->
        <str name="commitReserveDuration">00:00:10</str>
    </lst>
    <lst name="slave">
      <str name="masterUrl">${solr.urlmaster}/${solr.core.name}</str>
      <str name="pollInterval">24:00:00</str>
    </lst>
</requestHandler>