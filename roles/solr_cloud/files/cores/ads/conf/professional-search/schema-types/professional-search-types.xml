<?xml version="1.0" encoding="UTF-8" ?>

 <types>

   <fieldType name="professionalSearchText" class="solr.TextField">
     <analyzer>
       <tokenizer class="solr.WhitespaceTokenizerFactory"/>
       <filter class="solr.TrimFilterFactory" />
       <filter class="solr.StopFilterFactory"
               ignoreCase="true"
               words="professional-search/stopwords/stopwords_en.txt,
               			professional-search/stopwords/stopwords_es.txt,
               			professional-search/stopwords/stopwords_ca.txt,
               			professional-search/stopwords/stopwords_pt.txt,
               			professional-search/stopwords/stopwords_it.txt,
               			professional-search/stopwords/stopwords_street-types.txt"
               />
       <filter class="solr.LowerCaseFilterFactory"/>
       <charFilter class="solr.MappingCharFilterFactory" mapping="professional-search/schema-types/mapping-ISOLatin1Accent.txt"/>
     </analyzer>
   </fieldType>

 </types>
